<div class="panel panel-info">

  <div class="panel-heading">
    <h3 class="panel-title toggle" data-target="detalhes">Voluntário: <%= @voluntario.nome %>  <span class="plus_minus">[+]</span></h3>
  </div>

  <div class="panel-body" id="detalhes">

    <p>
      <b>Código:</b>
      <%= @voluntario.id %>
    </p>

    <p>
      <b>Nome:</b>
      <%= @voluntario.nome %>
    </p>

    <p>
      <b>Data de nascimento:</b>
      <%= @voluntario.data_nascimento %>
    </p>

    <p>
      <b>Prontuário:</b>
      <%= @voluntario.prontuario %>
    </p>

    <p>
      <b>Sexo:</b>
      <%= @voluntario.sexo_str %>
    </p>

    <p>
      <b>Estado civil:</b>
      <%= @voluntario.estado_civil_str %>
    </p>

    <p>
      <b>Profissão:</b>
      <%= @voluntario.profissao %>
    </p>

    <p>
      <b>Email:</b>
      <%= @voluntario.email %>
    </p>

    <p>
      <b>Nacionalidade:</b>
      <%= @voluntario.nacionalidade_str %>
    </p>

    <p>
      <b>Telefone:</b>
      <%= @voluntario.telefone %>
    </p>

    <p>
      <b>Celular:</b>
      <%= @voluntario.celular %>
    </p>

    <p>
      <b>Centro:</b>
      <%= @voluntario.centro.nome %>
    </p>

    <p>
      <b>Naturalidade:</b>
      <%= @voluntario.uf.nome %>
    </p>

    <p>
      <b>Endereco:</b>
      <% endereco = @voluntario.endereco %>
      <%= endereco.logradouro %>
      <%= endereco.complemento %>
      <%= endereco.bairro %>,
      <%= endereco.municipio ? endereco.municipio.nome : '' %>
    </p>
  </div>
</div>



<script type="text/javascript">
  $(document).ready(function () {
    $(".toggle").each(function () {
      $('#' + $(this).attr('data-target')).hide();
    });

    $(".toggle").click(function () {
      var _el = $('#' + $(this).attr('data-target'));
      if (_el.is(':visible')) {
        $(this).find(".plus_minus").html("[+]")
      } else {
        $(this).find(".plus_minus").html("[-]")
      }
      _el.toggle(500);
    });
  });

</script>
