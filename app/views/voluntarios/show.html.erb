  <div class="tab-pane fade active in" id="agenda">
    <%= render :partial => "tabela_agenda" %>
  </div>

  <div class="tab-pane fade" id="criterio">
    <%= render :partial => "tabela_criterios" %>
  </div>


  <div class="tab-pane fade" id="laudo">
    <%= render :partial => "tabela_laudos" %>
  </div>

  <div class="tab-pane fade" id="eventos_adversos">
    <%= render :partial => "tabela_eventos_adversos" %>
  </div>

  <div class="tab-pane fade" id="gravidez">
    <%= render :partial => "tabela_gravidezes" %>
  </div>

  <div class="tab-pane fade" id="superdose">
    <%= render :partial => "tabela_superdoses" %>
  </div>

  <div class="tab-pane fade" id="eventos_adversos_graves">
    <%= render :partial => "tabela_eventos_adversos_graves" %>
  </div>

  <div class="tab-pane fade" id="avaliacoes_clinicas">
    <%= render :partial => "tabela_avaliacoes_clinicas" %>
  </div>

</div>

<%= link_to 'Voltar', voluntarios_path, :class => 'btn btn-danger' %>

<script type="text/javascript">
  $(document).ready(function () {
    $(".toggle").each(function () {
      $('#' + $(this).attr('data-target')).hide();
    });

    $(".toggle").click(function () {
      var _el = $('#' + $(this).attr('data-target'));
      if (_el.is(':visible')) {
        $(this).find(".plus_minus").html("[+]")
      } else {
        $(this).find(".plus_minus").html("[-]")
      }
      _el.toggle(500);
    });
  });

</script>
