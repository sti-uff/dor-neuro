<div>
  <% unless @eventos_adversos.blank? %>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Data do registro</th>
          <th>Médico responsável</th>
        </tr>
      </thead>
      <tbody>
        <% @eventos_adversos.each do |evento| %>
          <tr>
            <td><%= link_to evento.data_formatada, eventos_adverso_path(evento) %></td>
            <td><%= evento.usuario.nome %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p class="alert alert-dismissable alert-warning">Nenhum evento adverso foi encontrado.</p>
  <% end %>
</div>