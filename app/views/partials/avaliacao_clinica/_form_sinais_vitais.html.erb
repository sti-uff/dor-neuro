<% content_for(:head) do %>
  <%= javascript_include_tag 'date_picker' %>
<% end %>

<%= form_for @avaliacao_clinica, :url => url do |f| %>
  <% if @avaliacao_clinica.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@avaliacao_clinica.errors.count, "erro impediu") %> esta avaliação clínica de ser salva:</h2>

      <ul>
        <% @avaliacao_clinica.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= hidden_field_tag 'avaliacao_clinica[usuario_id]', session[:usuario] %>

  <%= f.label :data_sinais_vitais_formatada, :class => 'control-label' %>
  <div class="controls">
    <%= f.text_field :data_sinais_vitais_formatada, :class => '_data_calendario' %>
  </div>
  <br/>

  <div class="control-group">
    <%= f.label :pressao, 'PA', :class => 'control-label' %>
    <div class="controls">
      <div class='input-append'>
        <%= f.text_field :pressao_sistolica %>
        x
        <%= f.text_field :pressao_diastolica %>
        <span class='add-on'>mmHg</span>
      </div>
    </div>
    <%= f.label :frequencia_cardiaca, :class => 'control-label' %>
    <div class="controls">
      <div class='input-append'>
        <%= f.text_field :frequencia_cardiaca %>
        <span class='add-on'>bpm</span>
      </div>
    </div>
    <%= f.label :frequencia_respiratoria, :class => 'control-label' %>
    <div class="controls">
      <div class='input-append'>
        <%= f.text_field :frequencia_respiratoria %>
        <span class='add-on'>ipm</span>
      </div>
    </div>
    <%= f.label :temperatura, :class => 'control-label' %>
    <div class="controls">
      <div class='input-append'>
        <%= f.text_field :temperatura %>
        <span class='add-on'>ºC</span>
      </div>
    </div>
    <%= f.label :peso, :class => 'control-label' %>
    <div class="controls">
      <div class='input-append'>
        <%= f.text_field :peso %>
        <span class='add-on'>Kg</span>
      </div>
    </div>
    <%= f.label :altura, :class => 'control-label' %>
    <div class="controls">
      <div class='input-append'>
        <%= f.text_field :altura %>
        <span class='add-on'>m</span>
      </div>
    </div>
    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-success' %>
      <%= link_to 'Voltar', voltar, :class => 'btn btn-danger' %>
    </div>
  </div>
<% end %>
